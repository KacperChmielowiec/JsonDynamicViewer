<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:tree="using:AvaloniaApplication2.Views"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="AvaloniaApplication2.Views.MainWindow"
		Title="AvaloniaAppTemplate">

	<Grid ColumnDefinitions="60,*" RowDefinitions="*" ShowGridLines="True">
		<Grid ShowGridLines="True" ColumnDefinitions="*" RowDefinitions="40,*" Grid.Column="1" Grid.Row="0">
			<Grid ShowGridLines="True" ColumnDefinitions="*,*" RowDefinitions="*" Grid.Row="1">
				<StackPanel Grid.Column="0" Background="LightGray">
					<TextBox Text="{Binding	Name}"></TextBox>
				
				</StackPanel>
				

			</Grid>

		</Grid>
	</Grid>


</Window>